#
# Custom aliases for zsh and bash
#

# set colour for common commands
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias ip='ip --color=auto'
alias diff='diff --color=auto'

alias sl='ls'
alias ll='ls -lFA'
alias la='ls -A'
alias l='ls'

alias svim='sudo vim'

alias show_path='echo "$PATH" | tr : "\n" | nl -s "  " -w 3'
alias sort_ips='sort -t . -n -k 1,1'
alias dir_size='du -sh'
